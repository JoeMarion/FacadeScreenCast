<div class="profile-container">
  <h1><%= @author.name %></h1>
  <div class="books-list">
    <div class="published">
      <h1 class="title">Published Books</h1>
      <ul>
        <% @published.each do |p| %>
          <li class="desc"><%= "Title: #{p.title}, genre: #{p.genre}" %></li>
        <% end %>
      </ul>
    </div>

    <div class="unpublished">
      <h1 class="title">Unpublished Books</h1>
      <ul>
        <% @unpublished.each do |p| %>
          <li class="desc"><%= "Title: #{p.title}, genre: #{p.genre}" %></li>
        <% end %>
      </ul>
    </div>

    <div class="fiction">
      <h1 class="title">Fiction</h1>
      <ul>
        <% @fiction.each do |p| %>
          <li class="desc"><%= "Title: #{p.title}, genre: #{p.genre}" %></li>
        <% end %>
      </ul>
    </div>

    <div class="non-fiction">
      <h1 class="title">Non-fiction</h1>
      <ul>
        <% @nonfiction.each do |p| %>
          <li class="desc"><%= "Title: #{p.title}, genre: #{p.genre}" %></li>
        <% end %>
      </ul>
    </div>

  </div>
</div>
